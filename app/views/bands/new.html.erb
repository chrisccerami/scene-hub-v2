<% if @band.errors.any? %>
  <div class='row'>
    <div class='small-12 medium-3 columns flash-error'>
      <% @band.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </div>
  </div>
<% end %>

<div class='row'>
<div class='small-12 medium-4 columns border'>
    <%= form_for @band do |f| %>
      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= fields_for :genre_list do |field| %>
        <%= field.label :genres, :punk %>
        <%= field.check_box :genres, {}, :punk %>

        <%= field.label :genres, :rock %>
        <%= field.check_box :genres, {}, :rock %>
      <% end %>

      <%= f.submit "Create band" %>
    <% end %>
  </div>
</div>
