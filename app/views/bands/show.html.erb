<div class='row'>
	<div class='small-12 medium-6 columns'>
		<h2><%= @band.name %></h2>
	</div>
</div>

<% if current_user == @band.user %>
	<div class='row'>
		<div class='small-12 medium-4 columns border'>
			<%= form_for [@band, @band_post] do |f| %>

				<%= f.label :title %>
				<%= f.text_field :title %>

				<%= f.label :content %>
				<%= f.text_field :content %>

				<%= f.submit "Post status update" %>
			<% end %>
		</div>
	</div>
<% end %>

<div class='row'>
	<div class='small-12 medium-6 columns'>
		<h3>Band News:</h3>
	</div>
</div>


<% if @band.band_posts %>
	<% @band.band_posts.sort_by { |post| post.created_at }.reverse.each do |post| %>
		<div class='row'>
			<div class='small-12 medium-6 columns border'>	
				<div>
					<h4><%= post.title %></h4>
				</div>
				<div>
					<%= post.content %>
				</div>
				<div>
					<%= link_to("Edit status", edit_band_band_post_path(@band, post)) %>
				</div>
				<div>
					<%= link_to("Delete status", band_band_post_path(@band, post), method: :delete) %>
				</div>
			</div>
		</div>
	<% end %>
<% end %>