<div class='row'>
  <div class='small-12 medium-6 columns border'>
    <%= @user.email %>
    <% if @user.bands %>
      <% @user.bands.each do |band| %>
        <div><%= link_to band.name, band_path(band) %></div>
      <% end %>
    <% end %>
    <% if current_user == @user %>
      <div>
        <%= link_to("Add a band", new_band_path) %>
      </div>
    <% end %>
  </div>
  <div class='small-12 medium-3 columns border'>
    <p>Is your band performing soon? Looking to spread the word?</p>
    <%= link_to("Post about an upcoming show!", new_show_path) %>
  </div>
</div>

<div class='row'>
  <div class='small-12 medium-4 columns border'>
  Your shows:
    <% @user.rsvps.each do |rsvp| %>
      <div>
        <%= link_to("#{rsvp.show.bands.first.name} at #{rsvp.show.venue.name}", show_path(rsvp.show)) %><br>
        <%= rsvp.show.date_and_time %>
      </div>
    <% end %>
  </div>
</div>
